{{!
    @template auth_companion/domainsettingsnote

    Displays a warning note

    Example context (json):
    {
        "errmsg"  : "Description of something"
    }

}}
{{^errmsg}}
{{#str}} setting_emaildomain_help, auth_companion {{/str}}
{{/errmsg}}
{{#errmsg}}
<div class="d-flex flex-column mb-4">
    <div class="text-danger">
        <span><i class="fa fa-times-circle-o mr-2"></i></span>
        <span>{{{.}}}</span>
    </div>
    <span>{{#str}} setting_emaildomain_help, auth_companion {{/str}}</span>
</div>
{{/errmsg}}
